#!/bin/bash
#Задание:
#Вывести из журнала событий auth.log только события входа в систему конкретного пользователя в отдельный файл. Отсортируйте информацию так, чтоб был виден только логин и время входа/выхода.
cat /var/log/auth.log | grep 'systemd-logind' | grep 'New session' | cut -d ' ' -f3,4 | cut -d - -f1
